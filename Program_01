#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

/* Um pecuarista possui uma determinada quantia de bois, que possuem um identificador numérico (de 1 a n) cada um. Faça um programa que: 

a.	receba o peso de cada boi, um por vez, e o armazene em um vetor. Se o peso digitado for 0 significa que não há mais bois a serem digitados; 
b.	mostre a lista de todos os bois com seus identificadores e também os identificadores do boi mais gordo e do boi mais magro. Se houver dois ou mais bois mais gordos ou mais magros mostrar o de menor identificador; 
c.	Faça o mesmo programa considerando que o número de bois é fixo e igual a dez. */

void ordem (float peso[10])
{
	int i,j,aux;
	
	for (i=1;i<=9;i++)
	{
		for(j=i+1;j<=10;j++)
		{
			if (peso[i]>peso[j])
			{
				aux = peso[i];
				peso[i] = peso[j];
				peso[j] = aux;
			}
		}
	}
}
void relacao(float peso[10], float *min, float *max)
{
	int i;
	*min = peso[1];
	*max = peso[1];
	
		for(i=1;i<=10;i++)
		{
			if(peso[i] < *min)
			{
				*min = peso[i];
			}
			if(peso[i] > *max)
			{
			
				*max = peso[i];
			}
		}
}


int main(int argc, char *argv[]) {

	int i,j,aux;
	float menor,maior,min,max;
	float peso[10];
	float n_peso;
	
	
	setlocale(LC_ALL,"Portuguese");
	
	printf("Controle de bois !\n");
	printf("----------------------------------------------------\n");
	
	for(i=1;i<=10;i++)
	{
		printf("Digite o peso do boi [%d]: ",i);
		scanf("%f",&peso[i]);
			
			
	}
	
	printf("\nLista de bois cadastrados em ordem crescente!\n");
	printf("-----------------------------------------------------\n");
	
	ordem(peso);
	
	for(i=1;i<=10;i++)
	{
		printf("Boi [%d] possui %.2f Kg\n",i,peso[i]);
	}
	
	printf("-----------------------------------------------------\n");
	
	
	relacao(peso,&menor,&maior);
		
	printf("\nO boi com maior peso e de %.2f kg\n",maior);
	printf("O boi com menor peso e de %.2f kg",menor);
	
	
	return 0;
}
